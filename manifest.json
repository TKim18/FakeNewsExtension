{
  "manifest_version": 2,

  "author": "CarMarTrisTim",
  "name" : "Pak!",
  "version" : "1.0",
  "description" : "Discover fake news",
  "icons": { 
  	"128": "images/icon.png",
  	"16": "images/icon.png",
  	"48": "images/icon.png"
  },
  "page_action": {
  	"default_icon": "images/icon.png"
  },
  "background": { 
  	"persistent" : false,
  	"scripts": ["js/main.js"] 
  },
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js": [ "js/content.js" ]
  }],
  "permissions": [ "<all_urls>" ]
}